{{template "admin" .}}

{{define "css"}}
<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" type="text/css">
{{end}}

{{define "page-title"}}
    All Reservations
{{end}}

{{define "content"}}


<input type="hidden" id="show_success_msg_admin" value="{{.ShowError}}">
<input type="hidden" id="show_success_msg_admin" value="{{.MessageType}}">
<input type="hidden" id="show_success_msg_admin" value="{{.MessageText}}">

    <div class="col-md-12">
        {{$res := index .Data "reservations"}}

        <table class="table table-striped table-hover" id="all-res">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Room</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Arrival</th>
                    <th>Departure</th>
                </tr>
            </thead>
            <tbody>
            {{range $res}}
                <tr>
                    <td>{{.ID}}</td>
                    <td>
                        <a href="/admin/reservations/all/{{.ID}}">
                        {{.FirstName}} {{.LastName}}
                        <a>
                    </td>
                    <td>{{.Room.RoomName}}</td>
                    <td>{{.Email}}</td>
                    <td>{{.Phone}}</td>
                    <td>{{.StartDate}}</td>
                    <td>{{.EndDate}}</td>
                </tr>
            {{end}}
            </tbody>
        </table>


    </div>
{{end}}




{{block "js" .}}
<script>
    window.onload = function(e){ 
            if (document.getElementById("show_success_msg_admin").value == "true"){
                notify("{{.MessageText}}", "{{.MessageType}}");
        } 
    }

    function notify(msg, msgType) {
        notie.alert({
            type: msgType,
            text: msg,
        })
    }
    
</script>

<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
<script>
document.addEventListener("DOMContentLoaded", function (){
    const dataTable = new simpleDatatables.DataTable("#all-res", {
        select: 3, sort: "desc",
    })
})
</script>
{{end}}